# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,astro,vue}]
quote_type = double
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{json,toml,yaml,yml}]
indent_size = 2
